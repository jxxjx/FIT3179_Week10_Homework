{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 500,
  "projection": {"type": "mercator"},
  "background": "#bce9fe",
  "view": {"fill": "#transparent", "stroke": "transparent"},
  "params": [
    {
      "name": "Sex",
      "value": "Total",
      "bind": {"input": "select", "options": ["Total", "Male", "Female"]}
    }
  ],
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jxxjx/FIT3179_Week9_Homework/main/output.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_1"}
      },
      "mark": {"type": "geoshape", "stroke": "#fefefe", "strokeWidth": 0.5, "fill": null}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jxxjx/FIT3179_Week9_Homework/main/output.json",
        "format": {"type": "topojson", "feature": "my"}
      },
      "mark": {"type": "geoshape", "fill": "#e0e1d3", "stroke": "#0a5725", "strokeWidth": 1}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jxxjx/FIT3179_Week9_Homework/main/output.json",
        "format": {"type": "topojson", "feature": "my"}
      },
      "mark": {"type": "geoshape", "fill": "#f8f5dd", "stroke": "#8b7d6f", "strokeWidth": 1}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jxxjx/FIT3179_Week9_Homework/main/foreign_arrivals.csv",
        "format": {"type": "csv", "parse": {"date": "date"}}
      },
      "transform": [
        {"calculate": "year(datum.date)", "as": "yr"},
        {"filter": "datum.yr == 2023"},
        {
          "aggregate": [
            {"op": "sum", "field": "arrivals", "as": "arrivals_total"},
            {"op": "sum", "field": "arrivals_male", "as": "arrivals_male"},
            {"op": "sum", "field": "arrivals_female", "as": "arrivals_female"}
          ],
          "groupby": ["poe"]
        },
        {"fold": ["arrivals_total", "arrivals_male", "arrivals_female"], "as": ["series", "val"]}
      ],
      "mark": {"type": "point", "opacity": 0},
      "encoding": {
        "size": {
          "field": "val",
          "type": "quantitative",
          "scale": {"type": "sqrt", "range": [30, 1200]}
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/jxxjx/FIT3179_Week9_Homework/main/foreign_arrivals.csv",
        "format": {"type": "csv", "parse": {"date": "date"}}
      },
      "transform": [
        {"calculate": "year(datum.date)", "as": "yr"},
        {"filter": "datum.yr == 2023"},
        {
          "aggregate": [
            {"op": "sum", "field": "arrivals", "as": "arrivals_total"},
            {"op": "sum", "field": "arrivals_male", "as": "arrivals_male"},
            {"op": "sum", "field": "arrivals_female", "as": "arrivals_female"}
          ],
          "groupby": ["poe"]
        },
        {
          "lookup": "poe",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/jxxjx/FIT3179_Week9_Homework/main/poe.csv",
              "format": {"type": "csv", "parse": {"lat": "number", "long": "number"}}
            },
            "key": "poe",
            "fields": ["lat", "long", "type", "state", "abb", "iso"]
          }
        },
        {"filter": "isValid(datum.lat) && isValid(datum.long)"},
        {
          "calculate": "Sex == 'Total' ? datum.arrivals_total : (Sex == 'Male' ? datum.arrivals_male : datum.arrivals_female)",
          "as": "value"
        }
      ],
      "mark": {"type": "circle", "opacity": 0.9, "stroke": "white", "strokeWidth": 0.6, "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "long", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "size": {
          "field": "value",
          "type": "quantitative",
          "title": "Arrivals",
          "scale": {"type": "sqrt", "range": [30, 1200]}
        },
        "color": {
          "field": "type",
          "type": "nominal",
          "title": "POE Type",
          "scale": {
            "domain": ["Air", "Sea", "Land"],
            "range": ["#8CCDEB", "#131D4F", "#541212"]
          }
        },
        "tooltip": [
          {"field": "poe", "title": "Point of Entry"},
          {"field": "state", "title": "State"},
          {"field": "type", "title": "Type"},
          {"field": "arrivals_total", "type": "quantitative", "title": "Total Arrivals (year)", "format": ","},
          {"field": "arrivals_male", "type": "quantitative", "title": "Male Arrivals (year)", "format": ","},
          {"field": "arrivals_female", "type": "quantitative", "title": "Female Arrivals (year)", "format": ","}
        ]
      }
    }
  ]
}
